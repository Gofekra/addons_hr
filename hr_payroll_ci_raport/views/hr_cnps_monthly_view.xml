<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="hr_payroll_cnps_monthly_view" model="ir.ui.view">
            <field name="name">hr.payroll.cnps.monthly.form</field>
            <field name="model">hr.payroll.cnps.monthly</field>
            <field name="arch" type="xml">
                <form string="Select Dates Period">
                    <group string="" col="2">
                      <field name="payroll_lot_id"/>
                        <field name="company_id"/>
                    </group>
                    <footer>
                        <!--<button name="compute" string="Générer CNPS" type="object" default_focus="1" class="btn-primary"/>-->
                        <button name="hr_cnps_print" string="Générer CNPS" type="object" default_focus="1" class="btn-primary"/>
                        <button string="Cancel" class="btn-default" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_hr_cnps_monthly_report" model="ir.actions.act_window">
            <field name="name">Budgets</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">hr.payroll.cnps.monthly</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="hr_payroll_cnps_monthly_view"/>
            <field name="target">new</field>
        </record>

        <menuitem id="payslip_cnps_menu" name="Rapports CNPS" parent="hr_payroll_ci_raport.menu_hr_payroll_menu"/>
        <menuitem id="paaction_hr_cnps_monthly_reportyslip_cnps_monthly_menu" name="CNPS Mensuels" parent="hr_payroll_ci_raport.payslip_cnps_menu"
                action="action_hr_cnps_monthly_report"/>
    </data>
</openerp>



